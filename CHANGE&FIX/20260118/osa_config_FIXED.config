/*
 * Oryza sativa Riboseq vs polyA RNA Analysis Configuration
 * Comparing Ribosome footprints with Total polyA RNA
 * Control vs Submergence treatment
 * 
 * ✅ FIXED: Added local rRNA database manifest to prevent download errors
 */

resume = true
workDir = './nextflow_work'

params {
    // Input/Output
    input = "${launchDir}/osa_Japonica/samplesheet_osa_SRP189094_riboseq_polya.csv"
    contrasts = "${launchDir}/osa_Japonica/samplesheet_osa_SRP189094_contrasts_riboseq_polya.csv"
    //outdir = "${launchDir}/osa_Japonica/results_osa_SRP189094_riboseq_polya"
    
    // Reference genome - Oryza sativa japonica (IRGSP-1.0)
    fasta = "/data1/users/siyangming/FASTA/osa_IRGSP10.fasta"
    gtf = "/data1/users/siyangming/GTF/osa_IRGSP1062.gtf"
    
    // ⭐ FIX: Use local rRNA database manifest instead of remote URLs
    // This prevents "No such file or directory" errors during SortMeRNA indexing
    // Make sure to run: python3 bin/download_rrna_databases.py first
    ribo_database_manifest = "/data1/users/siyangming/nextflow_nf_core/riboseq.nf/reference/rrna-db-local.txt"
    
    // General pipeline options
    clip_r1 = 0
    clip_r2 = 0
    three_prime_clip_r1 = 0
    three_prime_clip_r2 = 0
    trim_nextseq = 20
    save_trimmed = true
    
    // Alignment parameters
    aligner = 'star'
    save_align_intermeds = true
    save_unaligned = false
    
    // Quantification
    pseudo_aligner = 'salmon'
    skip_alignment = false
    
    // Ribosome footprint specific parameters
    min_length = 25              // Minimum read length for riboseq
    max_length = 35              // Maximum read length for riboseq
    ribotricer = true            // Enable ORF detection
    
    // Differential expression
    deseq2_vst = true            // Variance stabilizing transformation
    
    // MultiQC
    multiqc_title = 'Oryza sativa SRP189094 Riboseq vs polyA RNA Analysis'
    
    // Resource limits
    max_cpus = 16
    max_memory = '64.GB'
    max_time = '48.h'
    
    // Email notification (optional)
    // email = 'your.email@example.com'
    // email_on_fail = 'your.email@example.com'
}

process {
    // Error handling
    errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
    maxRetries = 2
    maxErrors = '-1'
    
    // Resource labels for different process types
    withLabel: process_low {
        cpus = { check_max( 2 * task.attempt, 'cpus' ) }
        memory = { check_max( 4.GB * task.attempt, 'memory' ) }
        time = { check_max( 4.h * task.attempt, 'time' ) }
    }
    
    withLabel: process_medium {
        cpus = { check_max( 6 * task.attempt, 'cpus' ) }
        memory = { check_max( 16.GB * task.attempt, 'memory' ) }
        time = { check_max( 8.h * task.attempt, 'time' ) }
    }
    
    withLabel: process_high {
        cpus = { check_max( 12 * task.attempt, 'cpus' ) }
        memory = { check_max( 32.GB * task.attempt, 'memory' ) }
        time = { check_max( 16.h * task.attempt, 'time' ) }
    }
    
    withLabel: process_long {
        time = { check_max( 20.h * task.attempt, 'time' ) }
    }
}

// Function to check maximum resource limits
def check_max(obj, type) {
    if (type == 'memory') {
        try {
            if (obj.compareTo(params.max_memory as nextflow.util.MemoryUnit) == 1)
                return params.max_memory as nextflow.util.MemoryUnit
            else
                return obj
        } catch (all) {
            println "   ### ERROR ###   Max memory '${params.max_memory}' is not valid! Using default value: $obj"
            return obj
        }
    } else if (type == 'time') {
        try {
            if (obj.compareTo(params.max_time as nextflow.util.Duration) == 1)
                return params.max_time as nextflow.util.Duration
            else
                return obj
        } catch (all) {
            println "   ### ERROR ###   Max time '${params.max_time}' is not valid! Using default value: $obj"
            return obj
        }
    } else if (type == 'cpus') {
        try {
            return Math.min( obj, params.max_cpus as int )
        } catch (all) {
            println "   ### ERROR ###   Max cpus '${params.max_cpus}' is not valid! Using default value: $obj"
            return obj
        }
    }
}
